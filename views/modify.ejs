<%- include('header.ejs') %>

<div class="d-flex justify-content-center">
    <p class="h1">Modify your post</p>
</div>

  <div class="d-flex justify-content-center">
    <form action="/modifyPost" method="POST">
      <span class="input-group-text">Post name and Short Description</span>
      <input type="text" name="postName" aria-label="Post name" class="form-control" value="<%= locals.title %>">
      <input type="text" name="shortDesc" aria-label="Short description" class="form-control" value="<%= locals.shortDesc %>">

      <span class="input-group-text">Write your new post here!ğŸ“</span>
      <textarea class="form-control" name="blogText" aria-label="With textarea"><%= locals.blogText %></textarea>

      <input class="btn btn-primary rounded-pill px-3 bg-dark" type="submit" value="Modify">
      <textarea id="hiddenText" hidden="true" class="form-control" name="postNumber" aria-label="With textarea"><%= locals.postNumber %></textarea>
    </form>
  </div>

  <% if (locals.postModified) { %>
  <div class="d-flex justify-content-center">
    <p>Post modified!</p>
  </div>
  <% } %>

